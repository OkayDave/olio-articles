<div class="group relative article border-gray-200 border-4" id="article_<%= article.id %>">
  <div class="min-h-80 aspect-w-1 aspect-h-1 w-full overflow-hidden rounded-md group-hover:saturate-200 lg:aspect-none lg:h-80 rounded-l">
    <%= image_tag article.images.first.dig('files', 'original'),
                alt: article.title,
                class: 'w-full object-cover object-center max-h-80 h-80'
    %>
  </div>
  <div class="mt-2 pl-2 mb-1 justify-between">
    <div class="grid grid-cols-4 gap-4">
      <div class="col-span-3">
        <h3 class="text-sm text-gray-700">
          <span aria-hidden="true" class="absolute inset-0"></span>
          <span class="font-bold">
            <%= article.title %>
          </span>
        </h3>
        <p class="text-xs mt-4">
          <%= article.description %>
        </p>
        <p class="text-xs text-gray-500 mt-4">
          üìç <%= article.location.fetch('town', 'Nearby') %>
        </p>
      </div>
      <%= like_button likeable: article, user: current_user %>
    </div>
  </div>
</div>