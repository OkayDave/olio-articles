<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="px-8 py-6 mx-4 mt-4 text-left bg-white shadow-lg">
    <h3 class="text-2xl font-bold text-center">Register</h3>
    <%= form_for @user, url: registrations_path, method: :post, data: { "turbo": false } do |form| %>
      <div class="mt-4">
        <div>
          <%= form.label :email %>
          <%= form.text_field :email,
                              class: 'w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600',
                              placeholder: 'joanne@example.com' %>
        </div>
        <div class="mt-4">
          <%= form.label :password %>
          <%= form.password_field :password,
                              class: 'w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600' %>
        </div>
        <div class="mt-4">
          <%= form.label :password_confirmation %>
          <%= form.password_field :password_confirmation,
                                  class: 'w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600' %>
        </div>
        <div class="flex">
          <%= form.submit 'Register',
                class: 'w-full px-6 py-2 mt-4 text-white bg-blue-600 rounded-lg hover:bg-blue-900'
          %>
        </div>
        <div class="mt-6 text-grey-dark">
          Already have an account?
          <%= link_to 'Log in', new_session_path %>
        </div>
      </div>
    <% end %>
  </div>
</diva